<%- include('partials/header') %>

<main>
  <h1>Ajouter un étudiant</h1>

<form method="POST" action="/admin/addStudent">
    <p>
        <label for="promo">Promo</label>
        <select name="promo_id" id="promo">
          <% promos.forEach((promo) => { %>
            <option value="<%= promo.id %>"><%= promo.name %></option>
          <% }) %>
        </select>
    </p>
    <p>
        <label>Prénom</label>
        <input type="text" name="first_name" value="Prénom">
    </p>
    <p>
        <label>Nom</label>
        <input type="text" name="last_name" value="Nom">
    </p>
    <p>
        <label>Pseudo Github</label>
        <input type="text" name="github_username" value="Pseudo Github">
    </p>
    <p>
        <button>Valider</button>
    </p>
</form>
</main>
    
<%- include('partials/footer') %>